@page
@using FrameWork.Application
@model WebHost.Areas.Administration.Pages.Accounts.Role.IndexModel
@{
}

@{
    Layout = "Shared/_AdminLayout";
    ViewData["title"] = "مدیریت نقش ها";
}

<div class="col-md-12">
    <div class="breadcrumb-box border shadow">
        <ul class="breadcrumb">
            <li><a asp-page="/Index">پیشخوان</a></li>
            <li><a href="#">تقش ها</a></li>
        </ul>
        <div class="breadcrumb-left">
            @DateTime.Now.ToFarsi()
            <i class="icon-calendar"></i>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <p class="pull-right">
            <a class="btn btn-success btn-lg mb-2" asp-page="Create">ایجاد نقش جدید</a>
        </p>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست نقش ها (@Model.Roles.Count)</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 ">
                        <table id="data-table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>نام</th>
                                    <th>تاریخ تولید</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Roles)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Name</td>
                                        <td>@item.CreationDate</td>
                                        <td>
                                            <a class="btn btn-warning waves-effect waves-light m-b-5" asp-page="Edit" asp-route-id="@item.Id">
                                                <i class="fa fa-edit"></i> ویرایش
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Admin-Theme/assets/plugins/data-table/js/jquery.dataTables.min.js"></script>
    <script src="~/Admin-Theme/assets/js/pages/datatable.js"></script>
    <script type="text/javascript">
        tableMain = $('#data-table').DataTable();
    </script>
}