@page
@using FrameWork.Application
@model WebHost.Areas.Administration.Pages.Accounts.Role.CreateModel

<div class="col-md-12">
    <div class="breadcrumb-box border shadow">
        <ul class="breadcrumb">
            <li><a asp-page="/Index">پیشخوان</a></li>
            <li><a href="#">ایجاد نقش</a></li>
        </ul>
        <div class="breadcrumb-left">
           @DateTime.Now.ToFarsi()
            <i class="icon-calendar"></i>
        </div>
    </div>
</div>




<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">ایجاد نقش جدید</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <form method="post">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Command.Name" class="control-label">نام</label>
                                        <input type="text" class="form-control" asp-for="Command.Name">
                                        <span asp-validation-for="Command.Name" class="error"></span>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-info  waves-effect waves-light">ایجاد</button>
                            <a asp-page="./Index" class="btn btn-dark  waves-effect waves-light ">بازگشت</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>